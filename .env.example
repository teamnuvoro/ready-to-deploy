# ---- Application ---------------------------------------------------
NODE_ENV=development
PORT=3000
SESSION_SECRET=dev-session-secret

# ---- Database (Postgres / Neon / Supabase) -------------------------
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://user:password@host/dbname

USE_IN_MEMORY_STORAGE=true
DISABLE_AUTH=true
DEV_USER_EMAIL=dev@riya.local
DEV_USER_NAME=Dev User
VITE_DISABLE_AUTH=true

# ---- OpenAI (Replit AI Integrations or direct OpenAI key) ----------
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-key

# ---- Sarvam Voice APIs ---------------------------------------------
SARVAM_API_KEY=your-sarvam-key

# ---- Email / OTP (SMTP) ------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Riya <noreply@yourdomain.com>

# ---- Cashfree Payments ---------------------------------------------
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret
CASHFREE_ENV=TEST
CASHFREE_WEBHOOK_URL=https://your-ngrok-domain.ngrok-free.app/api/cashfree/webhook
VITE_CASHFREE_MODE=sandbox

# ---- Optional: Payment callback when not running on Replit ---------
REPLIT_DEV_DOMAIN=http://localhost:3000

# ---- Optional: Replit Gmail Connector (skip locally) ---------------
# Provide these only if you want OTP emails to go through Gmail.
# When unset, OTP codes are logged to the server console.
REPLIT_CONNECTORS_HOSTNAME=
REPL_IDENTITY=
WEB_REPL_RENEWAL=
